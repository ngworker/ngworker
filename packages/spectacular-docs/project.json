{
  "name": "spectacular-docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/spectacular-docs/src",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}",
        "{projectRoot}/docs/api"
      ],
      "options": {
        "script": "build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "serve": {
      "executor": "nx:run-script",
      "options": {
        "script": "serve"
      }
    },
    "typecheck": {
      "executor": "nx:run-script",
      "dependsOn": ["build"],
      "inputs": ["{projectRoot}/**/*.{ts,tsx}"],
      "options": {
        "script": "typecheck"
      }
    },
    "version": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "packages/spectacular-docs",
        "command": "docusaurus docs:version \"{args.version}\""
      }
    }
  },
  "tags": ["type:docs"],
  "implicitDependencies": ["spectacular"]
}
