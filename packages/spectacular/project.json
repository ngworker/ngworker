{
  "name": "spectacular",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/spectacular/src",
  "prefix": "spectacular",
  "tags": ["type:package"],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/spectacular/ng-package.json"
      },
      "configurations": {
        "development": {
          "tsConfig": "packages/spectacular/tsconfig.lib.json"
        },
        "production": {
          "tsConfig": "packages/spectacular/tsconfig.lib.prod.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "mutation-test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx stryker run stryker.simple.conf.js",
        "cwd": "packages/spectacular"
      },
      "outputs": ["{projectRoot}/reports", "{projectRoot}/mutation-report.html"]
    },
    "mutation-test-full": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx stryker run",
        "cwd": "packages/spectacular"
      },
      "outputs": [
        "{projectRoot}/reports",
        "{projectRoot}/stryker-tmp",
        "{projectRoot}/mutation-report.html"
      ]
    }
  }
}
